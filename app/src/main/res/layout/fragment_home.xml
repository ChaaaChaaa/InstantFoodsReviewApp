<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".fragment.HomeFragment">



    <!-- TODO: Update blank fragment layout -->
    <GridLayout
        android:layout_width="@dimen/width_300dp"
        android:layout_height="@dimen/height_450dp"
        android:layout_marginTop="@dimen/margin_30dp"
        android:layout_marginLeft="@dimen/margin_35dp"
        android:columnCount="2"
        android:rowCount="3">

        <!--Row 1 -->
        <!--Column 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_8dp"
            app:cardCornerRadius="@dimen/radius_8dp"
            app:cardElevation="@dimen/elevation_8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_stew"
                    android:layout_width="@dimen/width_100dp"
                    android:layout_height="@dimen/height_100dp"
                    android:paddingTop="@dimen/padding_15dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/stew" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="찌개류"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <!--Column 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_8dp"
            app:cardCornerRadius="@dimen/radius_8dp"
            app:cardElevation="@dimen/elevation_8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_coldNoodle"
                    android:layout_width="@dimen/width_100dp"
                    android:layout_height="@dimen/height_100dp"
                    android:paddingTop="@dimen/padding_15dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/coldnoodles" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="냉면/면류"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--Row 2 -->
        <!--Column 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_8dp"
            app:cardCornerRadius="@dimen/radius_8dp"
            app:cardElevation="@dimen/elevation_8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_ddokbokki"
                    android:layout_width="@dimen/width_100dp"
                    android:layout_height="@dimen/height_100dp"
                    android:paddingTop="@dimen/padding_15dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ddokbokki" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="떡볶이"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--Column 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_8dp"
            app:cardCornerRadius="@dimen/radius_8dp"
            app:cardElevation="@dimen/elevation_8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_dumpling"
                    android:layout_width="@dimen/width_100dp"
                    android:layout_height="@dimen/height_100dp"
                    android:paddingTop="@dimen/padding_15dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/dumpling" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="만두/튀김류"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--Row 3 -->
        <!--Column 1 -->

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_8dp"
            app:cardCornerRadius="@dimen/radius_8dp"
            app:cardElevation="@dimen/elevation_8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_friedRice"
                    android:layout_width="@dimen/width_100dp"
                    android:layout_height="@dimen/height_95dp"
                    android:paddingTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/friedrice" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="볶음밥/덮밥류"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--Column 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_8dp"
            app:cardCornerRadius="@dimen/radius_8dp"
            app:cardElevation="@dimen/elevation_8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_pizza"
                    android:layout_width="@dimen/width_100dp"
                    android:layout_height="@dimen/height_100dp"
                    android:paddingTop="@dimen/padding_15dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/pizza" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="피자/핫도그"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>
</RelativeLayout>